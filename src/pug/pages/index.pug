extends ../layout/default.pug

block title
    title M-Box Online TV

block content
    .banner#banner
        .container 
            .banner__inner
                .banner__text-block-wrapper
                    .banner__text-block(data-aos="fade-right")
                        h1.banner__title Zack Snyder's Justice League
                        .banner-info
                            span.banner-info__year 2021
                            span.banner-info__age 18+
                            span.banner-info__time 4h 2min
                            span.banner-info__rating 8.8
                                <i class="fas fa-star"></i>
                        p.banner__text Determined to ensure Superman's ultimate sacrifice was not in vain, Bruce Wayne aligns forces with Diana Prince with plans to recruit a team of metahumans to protect the world from an approaching threat of catastrophic proportions.
                        .banner__btns
                            button.btn.btn--blue.btn--wi 
                                <i class="fas fa-play"></i> Watch
                            button.btn.btn--white More information

    //- TV shows
    section.section#tv-shows
        .container
            .section__inner 
                h2.section__title(data-aos="slide-left")
                    a(href="#") Trending TV Shows
                        <i class="fal fa-chevron-right"></i>
                        
                .section__content
                    ul.section__list
                        li.section__item(data-aos="fade-up", data-aos-delay="100")
                            a(href="#").section__link
                                img(src="images/shows/1.jpg", alt="After")
                        li.section__item(data-aos="fade-up", data-aos-delay="200")
                            a(href="#").section__link
                                img(src="images/shows/2.jpg", alt="Emancipation")
